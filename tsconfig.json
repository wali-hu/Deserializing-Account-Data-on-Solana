{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}